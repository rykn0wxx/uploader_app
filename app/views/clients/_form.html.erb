<%= simple_form_for(@client) do |f| %>

  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs"> 
    <div class="form-input-group mb-4">
      <div class="form-group form-group--float">
        <%= f.input_field :name,
          :class => "form-control",
          :required => true,
          :data => { :'form-input' => "float" } %>
        <%= f.label :name, :class => "form-label" %>
        <i class="form-group__bar"></i>
      </div>
    </div>
    <div class="form-input-group mb-4">
      <div class="form-group form-group--float">
        <%= f.input_field :active,
          :class => "form-control",
          :required => true,
          :data => { :'form-input' => "float" } %>
        <%= f.label :active, :class => "form-label" %>
        <i class="form-group__bar"></i>
      </div>
    </div>
    <div class="form-input-group mb-4">
      <div class="form-group form-group--float">
        <%= f.input_field :project,
          :class => "form-control",
          :required => true,
          :data => { :'form-input' => "float" } %>
        <%= f.label :project, :class => "form-label" %>
        <i class="form-group__bar"></i>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn--light mr-3" %>
    <% if client.persisted? -%>
      <%= link_to "Cancel", client, :class => "btn btn--default" %>
    <% else %>
      <%= link_to "Cancel", clients_path, :class => "btn btn--default" %>
    <% end -%>
  </div>

<% end %>
