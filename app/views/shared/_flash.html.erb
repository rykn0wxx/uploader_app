<% if flash.any? %>
  <div class="flash-wrapper">
    <% flash.each do |msg_type, message| -%>
      <div class="alert <%= bootstrap_class_for(msg_type) %>">
        <div class="container">
          <button class="close" data-dismiss="alert"><span>Ã—</span></button>
          <%= message %>
        </div>
      </div>
    <% end -%>
  </div>
  <%= javascript_tag type: "text/javascript" do -%>
    setTimeout(function () {
      let flashElem = $('body .flash-wrapper')
      flashElem.fadeOut('slow', () => $(flashElem).remove())
    }, 2500)
  <% end -%>
<% end %>