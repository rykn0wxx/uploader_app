<% title "Index", true, true %>

<div class="row">
  <div class="col-sm-6">
    <h1>Projects</h1>
  </div>
  <div class="col-sm-6 text-right">
    <%= link_to new_project_path, :class => 'btn btn--light' do -%>
      Add New Project
    <% end -%>
    <%= link_to import_projects_path, :class => 'btn btn--light' do -%>
      Bulk Upload Projects
    <% end -%>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Active</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <%= content_tag :tr, :id => dom_id(project), :class => dom_class(project) + " table-row", :tabindex => 0, :role => "link", :data => { :'row-url' => project_path(project) } do %>
          <td><%= project.name %></td>
          <td><%= project.active %></td>
          <td class="table-row__actions">
            <div class="btn-group">
              <%= link_to project, :class => "btn table-row__link text-info py-0" do %>
                <%= mi.visibility %>
              <% end %>
              <%= link_to project, :class => "btn table-row__link text-danger py-0", :method => :delete, :data => { :confirm => 'Are you sure?' } do %>
                <%= mi.delete %>
              <% end %>
            </div>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>